<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>border</title>
</head>
<body>
<%= form_with(model: client) do |form| %>
  <% if client.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :"Название компании латиницей:", style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :"Название компании по регистрации:", style: "display: block" %>
    <%= form.text_field :namereg %>
  </div>

  <div>
    <%= form.label :"Год основания компании:", style: "display: block" %>
    <%= form.number_field :year %>
  </div>

  <div>
    <%= form.label :"Организационно-правовая форма:", style: "display: block" %>
    <%= form.text_field :form %>
  </div>

  <div>
    <%= form.label :"УНП", style: "display: block" %>
    <%= form.text_field :unp %>
  </div>

  <div>
    <%= form.label :"Адрес/дом:", style: "display: block" %>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :"Город:", style: "display: block" %>
    <%= form.text_field :city %>
  </div>

  <div>
    <%= form.label :"Страна", style: "display: block" %>
    <%= form.text_field :country %>
  </div>

  <div>
    <%= form.label :"Адрес/дом-почт:", style: "display: block" %>
    <%= form.text_field :addresspost %>
  </div>

  <div>
    <%= form.label :"Город-почт:", style: "display: block" %>
    <%= form.text_field :citypost %>
  </div>

  <div>
    <%= form.label :"Страна-почт:", style: "display: block" %>
    <%= form.text_field :countrypost %>
  </div>

  <div>
    <%= form.label :"Основной телефон:", style: "display: block" %>
    <%= form.number_field :phone %>
  </div>

  <div>
    <%= form.label :"Общий адрес электронной почты:", style: "display: block" %>
    <%= form.text_field :emailaddress %>
  </div>

  <div>
    <%= form.label :"Общий адрес электронной почты:", style: "display: block" %>
    <%= form.text_field :site %>
  </div>

  <div>
    <%= form.label :"Банковские реквизиты:", style: "display: block" %>
    <%= form.text_area :banksdet %>
  </div>

  <div>
    <%= form.label :"Дополнительные данные:", style: "display: block" %>
    <%= form.text_area :additional %>
  </div>

  <div>
    <%= form.submit 'Сохранить'%>
  </div>
<% end %>
    
</body>
</html>